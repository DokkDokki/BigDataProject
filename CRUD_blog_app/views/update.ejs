<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="create-blog content">
    <h2>Update Student Data</h2>

    <form action="/blogs/update/<%= blog._id %>" method="POST">
      
      <label for="student_id">Student ID (Cannot be changed):</label>
      <input type="text" id="student_id" name="student_id" value="<%= blog.student_id %>" readonly>

      <label for="course">Course Code:</label>
      <input type="number" id="course" name="course" value="<%= blog['Course'] %>" required>

      <label for="age">Age at Enrollment:</label>
      <input type="number" id="age" name="age" value="<%= blog['Age at enrollment'] %>" required>

      <label for="marital_status">Marital Status (1=Single, 2=Married):</label>
      <input type="number" id="marital_status" name="marital_status" value="<%= blog['Marital status'] %>" required>

      <label for="units_approved">Curricular units 1st sem (approved):</label>
      <input type="number" id="units_approved" name="units_approved" value="<%= blog['Curricular units 1st sem (approved)'] %>" required>

      <label for="units_grade">Curricular units 1st sem (grade):</label>
      <input type="number" step="0.1" id="units_grade" name="units_grade" value="<%= blog['Curricular units 1st sem (grade)'] %>" required>

      <button>Update & Recalculate Risk</button>
    </form>
  </div>

  <%- include("./partials/footer.ejs") %>
</body>